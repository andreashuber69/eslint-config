{
  "name": "@andreashuber69/eslint-config",
  "version": "1.1.29",
  "description": "Provides a comprehensive, carefullly curated and tested shareable eslint config for TypeScript projects.",
  "keywords": [
    "eslint",
    "eslintconfig",
    "eslint-config",
    "typescript"
  ],
  "homepage": "https://github.com/andreashuber69/eslint-config/blob/master/README.md#----andreashuber69eslint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreashuber69/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/andreashuber69/eslint-config/issues"
  },
  "license": "Unlicense",
  "author": {
    "name": "Andreas Huber"
  },
  "main": "index.js",
  "files": [
    "/index.js",
    "/*.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prelint": "cspell '**' && markdownlint '**/*.md'",
    "lint": "eslint --report-unused-disable-directives 'index.js' 'test/**' ",
    "test-no-coverage": "ts-mocha 'test/**/*.spec.ts'",
    "test": "c8 --exclude 'test/**' --reporter=text --reporter=lcov npm run test-no-coverage",
    "show-coverage": "vite 'coverage/lcov-report' --logLevel error --open",
    "preci": "npm run lint",
    "ci": "npm test"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^46.3.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^47.0.0"
  },
  "devDependencies": {
    "@tsconfig/node-lts-strictest": "^18.12.1",
    "@types/chai": "^4.3.5",
    "@types/eslint": "^8.40.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.18",
    "@types/node-fetch": "^2.6.4",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "c8": "^8.0.0",
    "chai": "^4.3.7",
    "coveralls": "^3.1.1",
    "cspell": "^6.31.1",
    "eslint": "^8.43.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^46.3.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^47.0.0",
    "markdownlint-cli": "^0.35.0",
    "mocha": "^10.2.0",
    "node-fetch": "^2.6.11",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9"
  }
}
